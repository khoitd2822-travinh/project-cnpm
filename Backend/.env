#Flask settings
Flask_ENV=development
Secret_Key=your_secret_key_here

#PostgreSQL settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=1234
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=postgres
DATABASE_URL=postgresql+psycopg2://postgres:1234@127.0.0.1:5432/postgres

# Redis (caching, session tạm thời)
REDIS_URL=redis://127.0.0.1:6379/0   
# JWT Authentication (cho login Author, lấy user.id để query My Papers)
JWT_SECRET_KEY=another_very_long_random_secret_key_here_change_this_please
JWT_ACCESS_TOKEN_EXPIRES=3600          # 1 giờ (có thể điều chỉnh)
JWT_REFRESH_TOKEN_EXPIRES=86400        # 1 ngày (optional)

# Optional: Debug / Logging
DEBUG=True
